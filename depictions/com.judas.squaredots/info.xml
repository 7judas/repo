<package>
	<id>com.judas.squaredots</id>
	<name>SquareDots</name>
	<version>1.1.0</version>
	<compatibility>
		<firmware>
			<miniOS>7.0</miniOS>
		</firmware>
	</compatibility>
	<dependencies>
		<package>mobilesubstrate</package>
	</dependencies>
	<shortDescription>Cool rounded square page dots.</shortDescription>
	<descriptionlist>
		<description>iOS 7.0 > iOS 13.3</description>
		<description>This tweak turns your normal page dots into rounded square dots.</description>
	</descriptionlist>
	<screenshots>
		<screenshot>
			<image>squaredots.jpg</image>
		</screenshot>			
	</screenshots>
	<changelog>
		<change>Fixed a bug where the page dots disappeared.</change>
	</changelog>
	<links>
		<link>
			<name>Patreon</name>
			<url>https://www.patreon.com/7judas</url>
			<iconclass>fa fa-money</iconclass>
		</link>
	</links>
</package>